# -- Multiple Accounts --
#
# Account related shortcuts
folder-hook '.*' 'source ~/.mutt/shortcuts.muttrc'
# Default account
source ~/.mutt/accounts/account_nwpu.muttrc
# Switching accounts
macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/accounts/account_nwpu.muttrc<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/accounts/account_love.muttrc<enter><change-folder>!<enter>'
# Run mbsync to fetch mails
macro index <f5> "!mbsync -a<enter>" "Fetch new mails"

# -- misc --
#
# charset
set charset = "utf-8"
# editor
set editor = "vim"
# allow open new connection
set imap_passive = no
# how often to check new mail (seconds)
set mail_check = 60
# sort method
set sort = threads
set sort_aux = reverse-date
# do not open next mail automatically
set pager_stop = yes
# include the original
set include = yes
# forward attachments
set mime_forward = yes
# reply with body directly
set fast_reply = yes
# save sent mails
set copy = yes
# prompt when quit
set quit = ask-yes
# no prompt for delete
set delete = yes
# quick move mail
set confirmappend = no
# render html
alternative_order text/plain text/enriched text/html
auto_view text/html
# color scheme
source ~/.mutt/colors.muttrc
# gnupg functions
source ~/.mutt/gpg.muttrc

# -- general key bindings --
#
bind editor <space> noop
bind index,pager \cf next-page
bind index,pager \cb previous-page
bind index gg first-entry
bind index G last-entry
bind pager gg top
bind pager G bottom
bind pager j next-line
bind pager k previous-line
bind pager R group-reply

# vi: ft=muttrc
