# -- personal --
#
set realname = "Jiaxi Gu"
set from = "gujiaxi@love.com"
set signature = "echo \"Jiaxi Gu\n0x3F91F329\" |"

# -- account --
#
set my_mailpass = `gpg -qd ~/.authinfo.gpg | sed -n 's/^machine imap.aol.com .*password \([^ ]*\).*/\1/p'`
set imap_user = "gujiaxi@love.com"
set imap_pass = $my_mailpass
set smtp_url = "smtp://gujiaxi\@love.com@smtp.aol.com:587/"
set smtp_pass = $my_mailpass

# -- folders --
#
set mbox_type = Maildir
set folder = "imaps://imap.aol.com:993/"
set spoolfile = "+INBOX"
set mbox = "+Archive"
set postponed = "+Drafts"
set trash = "+Trash"
set record = "+Sent"

# -- cache --
#
set header_cache = ~/.cache/mutt/headers
set message_cachedir = ~/.cache/mutt/bodies
set message_cache_clean = yes

# -- misc --
#
# charset
set charset = "utf-8"
# editor
set editor = "vim"
# allow open new connection
set imap_passive = no
# how often to check new mail (seconds)
set mail_check = 60
# sort method
set sort = threads
set sort_aux = reverse-date
# do not open next mail automatically
set pager_stop = yes
# include the original
set include = yes
# forward attachments
set mime_forward = yes
# reply with body directly
set fast_reply = yes
# no copy or move
set copy = no
set move = no
# prompt when quit
set quit = ask-yes
# no prompt for delete
set delete = yes
# quick move mail
set confirmappend = no
# render html
alternative_order text/plain text/enriched text/html
auto_view text/html
# color scheme
source ~/.mutt/colors.rc

# -- key bindings --
#
bind editor <space> noop
macro index,pager e "<save-message>+Archive<enter>" "Archive mail"
macro index,pager \# "<save-message>+Trash<enter>" "Trash mail"
macro index,pager S "<save-message>+INBOX<enter>" "Restore mail"
macro index,pager gi "<change-folder>+INBOX<enter>" "Go to Inbox"
macro index,pager ga "<change-folder>+Archive<enter>" "Go to All Mail"
macro index,pager gs "<change-folder>+Sent<enter>" "Go to Sent Mail"
macro index,pager gt "<change-folder>+Trash<enter>" "Go to Trash"
macro index,pager gd "<change-folder>+Drafts<enter>" "Go to Drafts"
# vim-like keys
bind index,pager \cf next-page
bind index,pager \cb previous-page
bind index gg first-entry
bind index G last-entry
bind pager gg top
bind pager G bottom
bind pager j next-line
bind pager k previous-line
bind pager R group-reply

# vi: ft=muttrc
